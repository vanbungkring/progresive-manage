<div class="bg-light lter b-b wrapper-md">
  <span class="btn-group pull-right">
      <a href="<%=PREFIX_ROUTE_BACK_OFFICE%>/campaign/<%=identifier%>/update/add" class="btn btn-default btn-sm btn-success">ADD UPDATE FOR THIS CAMPAIGN</a>
  </span>
    <h1 class="m-n font-thin h3"><%= title %></h1>
</div>

<% if ( typeof message!='undefined' && message.length>0) { %>
  <div class="alert alert-<%=message[0].status%>" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%=message[0].message%>
  </div>
<% } %>

<div class="wrapper-md">
    <div class="panel panel-default">
        <div class="panel-heading hide">
            <%= title %>
        </div>
        <div class="table-responsive">
            <table id="table" ui-jq="dataTable" ui-options="{order: [[ 0, 'asc' ]], language: {url: 'http://cdn.datatables.net/plug-ins/1.10.13/i18n/Indonesian.json'}}" class="table table-striped b-t b-b">
                <thead>
                    <tr>
                        <th style="width:20%">Title</th>
                        <th style="width:20%">Writer</th>
                        <th style="width:20%">Created At</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.data.forEach(function(campaignUpdate){ %>
                        <tr>
                            <td>
                                <%=campaignUpdate.postMeta.title%>
                            </td>
                            <td>
                                <%=campaignUpdate.writer.firstName%>
                            </td>
                            <td>
                                <%=campaignUpdate.updatedAt%>
                            </td>

                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
