<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3"><%=title%></h1>
</div>
<div class="wrapper-md">
    <div class="col-md-8">
        <div class="panel panel-danger">
            <div class="panel-heading"><h4>Apakah Anda ingin menghapus donatur?</h4></div>
            <div class="panel-body">
                <form role="form" method="POST" ui-jq="parsley">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <h3><%=data.data.name%></h3>
                                <% if ( typeof data.data!='undefined' && data.data.username.length>0) { %>
                                  <h4><%=data.data.username%></h4>
                                <% } %>
                                <input type="text" class="hidden" value="<%= (typeof data.data!='undefined' && data.data._id) ? data.data._id : '' %>" name="_id">
                            </div>
                        </div>
                    </div>
                    <div class="line line-dashed b-b line-lg pull-in"></div>
                    <div class="form-group">
                        <div class="row">
                          <div class="col-xs-6">
                            <button type="submit" class="btn btn-danger">Ya</button>
                          </div>
                          <div class="col-xs-6">
                            <a href="<%=PREFIX_ROUTE_BACK_OFFICE%>/donor" class="btn btn-default pull-right">Tidak</a>
                          </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
